@model StudentVM
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <h2 class="display-5">Add New Student</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <label asp-for="StudentName" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="StudentName" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="DateOfBirth" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="DateOfBirth" type="date" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Phone" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="Phone" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="ImageFile" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="ImageFile" type="file" class="form-control form-control-sm" />
                </div>
                <div class="col-2">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="MorningShift" class="col-form-label col-3"></label>
                <div class="col-7 form-check">
                    <label class="form-check-label">
                        @Html.CheckBoxFor(x => x.MorningShift)
                    </label>
                </div>
                <div class="col-2">
                    <span asp-validation-for="MorningShift" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2 class="display-5">Subjects</h2>
            <div class="d-flex justify-content-end">
                <a id="btnPlus" class="btn btn-primary btn-sm"><i class="fa fa-plus"></i></a>
            </div>
            <div id="subjectContainer">
                <script>
                    LoadData();
                </script>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <input type="submit" value="Save" class="btn btn-primary mt-2" />
    </div>
</form>
<div>
    <a asp-action="Index" asp-controller="Students" class="btn btn-link btn-sm "><i class="fa fa-arrow-circle-left"></i> Back to list</a>
</div>


